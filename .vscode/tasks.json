{
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d", "/c vcvars64 &"
			]
		}
	},
	"tasks": [
		{
			"type": "shell",
			"label": "Clean",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"windows": {
				"command": "make",
				"args": [
					"clean_win"
				],
			},
			"linux": {
				"command": "make",
				"args": [
					"clean_unix"
				]
			}
		},
		{
			"type": "shell",
			"label": "Build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"windows": {
				"command": "make",
				"args": [
					"build_win"
				],
				"problemMatcher":"$msCompile",
			},
			"linux": {
				"command": "make",
				"args": [
					"build_unix"
				],
				"problemMatcher":"$gcc"
			}
		}
	]
}
